<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /SecDesk-project/public/
    
    # Allow direct access to real files
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^ - [L]
    
    # Allow direct access to real directories
    RewriteCond %{REQUEST_FILENAME} -d
    RewriteRule ^ - [L]
    
    # Route all API requests through index.php
    RewriteRule ^api/ index.php [L]
    
    # Route authentication requests
    RewriteRule ^login$ index.php [L]
    RewriteRule ^logout$ index.php [L]
    RewriteRule ^isLoggedIn$ index.php [L]
    
    # Route all other requests to index.php
    RewriteRule . index.php [L]
</IfModule>
